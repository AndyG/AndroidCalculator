<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/currentExpressionDisplay"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/zero">
        </TextView>

        <TextView
            android:gravity="right"
            android:id="@+id/mainDisplay"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/zero">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_row1"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:text="@string/one"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:onClick="onNumberButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/two"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:onClick="onNumberButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/three"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:inputType="numberDecimal"
            android:onClick="onNumberButtonClicked"
            android:longClickable="false">
        </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_row2"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginTop="3pt">
            <Button
                android:text="@string/four"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btn4"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:onClick="onNumberButtonClicked"
                android:longClickable="false">
            </Button>
            <Button
                android:text="@string/five"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:onClick="onNumberButtonClicked"
                android:longClickable="false">
            </Button>
            <Button
                android:text="@string/six"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:inputType="numberDecimal"
                android:onClick="onNumberButtonClicked"
                android:longClickable="false">
            </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_row3"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:text="@string/seven"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn7"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:onClick="onNumberButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/eight"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:onClick="onNumberButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/nine"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:inputType="numberDecimal"
            android:onClick="onNumberButtonClicked"
            android:longClickable="false">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_row4"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">
        <Button
            android:text="@string/plus"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_plus"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:onClick="onOperationButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/minus"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_minus"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            android:onClick="onOperationButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/multiply"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_muliply"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:inputType="numberDecimal"
            android:onClick="onOperationButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/divide"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_divide"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:inputType="numberDecimal"
            android:onClick="onOperationButtonClicked"
            android:longClickable="false">
        </Button>
        <Button
            android:text="@string/equals"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_equals"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:inputType="numberDecimal"
            android:onClick="onEqualsButtonClicked"
            android:longClickable="false">
        </Button>

    </LinearLayout>
    <Button
        android:text="@string/clear"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:onClick="onClearButtonClicked"
        android:longClickable="false">
    </Button>
</LinearLayout>